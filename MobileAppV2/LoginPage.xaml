<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppV2.LoginPage"
             Title="Connexion">
    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
        <Image
            Source="logo_groupe3il.jpg"
            SemanticProperties.Description="3il-group"
            HeightRequest="200"
            HorizontalOptions="Center" />
        <Button 
            Text="Se connecter" 
            HorizontalOptions="Center"
            Clicked="LoginButton_Clicked" />
    </VerticalStackLayout>
</ContentPage>