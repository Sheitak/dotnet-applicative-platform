<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppV2.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Image
                Source="logo_groupe3il.jpg"
                SemanticProperties.Description="3il-group"
                HeightRequest="200"
                HorizontalOptions="Center" />
            <Label
                Text="Bienvenue,"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="28"
                HorizontalOptions="Center" />
            <Label
                Text="Aucune Connexion"
                x:Name="StudentName"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="24"
                HorizontalOptions="Center" />
            <Label
                x:Name="AppType"
                Text=".NET Multi-platform App UI V2"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description=".NET Multi-platform App UI V2"
                FontSize="18"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
